<% provide(:title, 'Log in') %>

<h1>Log in: </h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag({controller: 'user', action: 'signin'}, method: 'post')  do %>

        <%= label_tag 'Email' %>
        <%= text_field_tag(:email) %>

        <%= label_tag 'Password' %>
        <%= password_field_tag (:password) %>

        <%= label_tag '' %>

        <%= submit_tag 'Log in' , class: "btn btn-sm btn-primary" %>
    <% end %>
    <%= link_to "Register", register_path %>
  </div>
</div>